<div class="row hidden-xs">
  <div class="col-md-12"><p></p></div>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3><%= @pool_member.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <h3>Skaters</h3>
            <table id="skaterTable" class="table table-striped table-condensed">
              <thead>
              <tr>
                <th>Name</th>
                <th>Team</th>
                <th class="hidden-xs">Position</th>
                <th>Goals</th>
                <th>Assists</th>
                <th>Total Points</th>
              </tr>
              </thead>

              <tbody>
              <% @pool_member.skaters.each do |skater| %>
                  <tr <%= 'class=danger' if skater.nhl_team.active == false %>>
                    <td><%= skater.name %></td>
                    <td><%= skater.team %></td>
                    <td class="hidden-xs"><%= skater.pos %></td>
                    <td><%= skater.goals %></td>
                    <td><%= skater.assists %></td>
                    <td><%= skater.total_points %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row">
            <div class="col-md-12">
              <h3>Goalies</h3>
              <table id="goalieTable" class="table table-striped table-condensed">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Team</th>
                  <th>Wins</th>
                  <th>Shutouts</th>
                  <th class="hidden-xs">Goals</th>
                  <th class="hidden-xs">Assists</th>
                  <th>Total Points</th>
                </tr>
                </thead>

                <tbody>
                <% @pool_member.goalie.each do |goalie| %>
                    <tr <%= 'class=danger' if goalie.nhl_team.active == false %>>
                      <td><%= goalie.name %></td>
                      <td><%= goalie.team %></td>
                      <td><%= goalie.wins %></td>
                      <td><%= goalie.so %></td>
                      <td class="hidden-xs"><%= goalie.goals %></td>
                      <td class="hidden-xs"><%= goalie.assists %></td>
                      <td><%= goalie.total_points %></td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
        </div>

      </div>
    </div>
  </div>


</div>
