<%- model_class = Skater -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @skater.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team) %>:</strong></dt>
  <dd><%= @skater.team %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pos) %>:</strong></dt>
  <dd><%= @skater.pos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goals) %>:</strong></dt>
  <dd><%= @skater.goals %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assists) %>:</strong></dt>
  <dd><%= @skater.assists %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pool_member_id) %>:</strong></dt>
  <dd><%= @skater.pool_member_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nhl_id) %>:</strong></dt>
  <dd><%= @skater.nhl_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              skaters_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_skater_path(@skater), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              skater_path(@skater),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
