<div class="row hidden-xs">
  <div class="col-md-12"><p></p></div>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading" style="margin-bottom: 10px;">
        <h3>Pools</h3>
        <%= link_to '(Add a new Pool)', new_pool_path %>
      </div>

      <table class="table table-striped table-condensed">
        <thead>
        <tr>
          <th>Name</th>
          <th>Last Update</th>
          <th colspan="4"></th>
        </tr>
        </thead>

        <tbody>
        <% @pools.each do |pool| %>
            <tr>
              <td><%= pool.name %></td>
              <td><%= pool.last_update.in_time_zone("Eastern Time (US & Canada)").strftime("%m/%d/%Y %I:%M %p") %></td>
              <td><%= link_to 'Playoff teams', pool_nhl_teams_path(pool) %></td>
              <td><%= link_to 'Pool Members', pool_pool_members_path(pool) %></td>
              <td><%= link_to 'Edit', edit_pool_path(pool) %></td>
              <td><%= link_to 'Destroy', pool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <div class="panel-footer" style="margin-top: 10px;">
        <div class="row">
          <div class="col-md-12">
            <h5 class="pull-right">
              <strong>Use to refresh stats if schedular doesn't work.</strong>
              <%= link_to "Refresh Player Stats", updateSkaters_pools_path, method: :post, :class => 'btn btn-success' %>
            </h5>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
