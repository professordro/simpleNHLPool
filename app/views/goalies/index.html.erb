<%- model_class = Goalie -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="span8">
    <table id="allGoaliesTable" class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Team</th>
          <th>Wins</th>
          <th>So</th>
          <th>Total Points</th>
          <th>Pool member</th>
        </tr>
      </thead>

      <tbody>
        <% @goalies.each do |goalie| %>
          <tr>
            <td><%= goalie.name %></td>
            <td><%= goalie.team %></td>
            <td><%= goalie.wins %></td>
            <td><%= goalie.so %></td>
            <td><%= goalie.total_points %></td>
            <td><%= goalie.pool_member.name if goalie.pool_member %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

