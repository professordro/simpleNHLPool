<h1>Listing goalies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th>Wins</th>
      <th>So</th>
      <th>Pool member</th>
      <th>Nhl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goalies.each do |goalie| %>
      <tr>
        <td><%= goalie.name %></td>
        <td><%= goalie.team %></td>
        <td><%= goalie.wins %></td>
        <td><%= goalie.so %></td>
        <td><%= goalie.pool_member.name if goalie.pool_member %></td>
        <td><%= goalie.nhl_id %></td>
        <td><%= link_to 'Show', goalie %></td>
        <td><%= link_to 'Edit', edit_goalie_path(goalie) %></td>
        <td><%= link_to 'Destroy', goalie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

