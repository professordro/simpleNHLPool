<%- model_class = Goalie -%>
<div class="row hidden-xs">
  <div class="col-md-12"><p></p></div>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">

      <div class="panel-heading" style="margin-bottom: 10px;">
        <h3><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
      </div>

      <table id="allGoaliesTable" class="table table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th>Team</th>
          <th>Wins</th>
          <th>SO</th>
          <th>Goals</th>
          <th>Assists</th>
          <th>Total Points</th>
          <th>Pool member</th>
        </tr>
        </thead>

        <tbody>
        <% @goalies.each do |goalie| %>
            <tr>
              <td><%= goalie.name %></td>
              <td><%= goalie.team %></td>
              <td><%= goalie.wins %></td>
              <td><%= goalie.so %></td>
              <td><%= goalie.goals %></td>
              <td><%= goalie.assists %></td>
              <td><%= goalie.total_points %></td>
              <td><%= goalie.pool_member.name if goalie.pool_member %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>

  </div>

</div>

